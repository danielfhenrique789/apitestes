extends layout

block content
	h1 Criar uma conta: #{host}
	form(method="POST" action="register")
		div(class="form-group")
			label(for="name" class="col-lg-2 control-label") Nome:
			input(type="text" id="name" name="name" class="form-control" placeholder="Nome")
		div(class="form-group")
			label(for="email" class="col-lg-2 control-label") Email:
			input(type="email" id="email" name="email" class="form-control" placeholder="Email")
		div(class="form-group")
			label(for="password" class="col-lg-2 control-label") Senha:
			input(type="password" id="password" name="password" class="form-control" placeholder="Senha")
		div(class="form-group")
			label(for="passwordconfirm" class="col-lg-2 control-label") Confirmar Senha:
			input(type="password" id="passwordconfirm" name="passwordconfirm" class="form-control" placeholder="Confirmar Senha")
		div(class="form-group")
			button(type="submit" class="btn btn-primary") Enviar
		div(class="form-group")
			a(href="/") Voltar
